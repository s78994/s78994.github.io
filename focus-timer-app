<body>
    <a href="#" class="back-link">‚Üê Back to Home</a>

    <div class="container">
        <div class="status-text" id="status">Zzz... Sleeping</div>
        <div class="pet-display" id="pet">üò¥</div>
        <div class="timer-display" id="timer">25:00</div>
        
        <div class="controls">
            <button id="startBtn" onclick="startTimer()">Start</button>
            <button id="pauseBtn" onclick="pauseTimer()">Pause</button>
            <button id="resetBtn" onclick="resetTimer()">Reset</button>
        </div>

        <div class="todo-section">
            <div class="todo-input-group">
                <input type="text" id="taskInput" placeholder="Add a focus task...">
                <button id="addBtn" onclick="addTask()">Add</button>
            </div>
            <ul id="taskList"></ul>
            <button class="clear-btn" onclick="clearTasks()">Clear All Tasks</button>
        </div>
    </div>

    <audio id="successSound" src="https://actions.google.com/sounds/v1/alarms/beep_short.ogg"></audio>

    <script>
        // Timer Logic
        let timeLeft = 25 * 60;
        let timerId = null;
        let isRunning = false;

        const timerDisplay = document.getElementById('timer');
        const petDisplay = document.getElementById('pet');
        const statusText = document.getElementById('status');
        const startBtn = document.getElementById('startBtn');
        const successSound = document.getElementById('successSound');

        // To-Do Logic
        const taskInput = document.getElementById('taskInput');
        const taskList = document.getElementById('taskList');
        let tasks = JSON.parse(localStorage.getItem('focusTasks')) || [];

        function updateDisplay() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            document.title = `${timerDisplay.textContent} - Focus Companion`;
        }

        function startTimer() {
            if (isRunning) return;
            isRunning = true;
            startBtn.disabled = true;
            petDisplay.textContent = 'üòé';
            petDisplay.classList.add('bounce');
            statusText.textContent = 'Stay Focused!';
            timerId = setInterval(() => {
                timeLeft--;
                updateDisplay();
                if (timeLeft <= 0) {
                    clearInterval(timerId);
                    completeSession();
                }
            }, 1000);
        }

        function pauseTimer() {
            clearInterval(timerId);
            isRunning = false;
            startBtn.disabled = false;
            petDisplay.classList.remove('bounce');
            petDisplay.textContent = 'ü§î';
            statusText.textContent = 'Paused';
        }

        function resetTimer() {
            clearInterval(timerId);
            isRunning = false;
            startBtn.disabled = false;
            timeLeft = 25 * 60;
            petDisplay.textContent = 'üò¥';
            petDisplay.classList.remove('bounce');
            statusText.textContent = 'Zzz... Sleeping';
            updateDisplay();
        }

        function completeSession() {
            isRunning = false;
            startBtn.disabled = false;
            petDisplay.textContent = 'ü•≥';
            petDisplay.classList.remove('bounce');
            statusText.textContent = 'Great Job!';
            successSound.play();
            alert("Session complete! Time for a short break.");
        }

        // To-Do Functions
        function renderTasks() {
            taskList.innerHTML = '';
            tasks.forEach((task, index) => {
                const li = document.createElement('li');
                li.textContent = task.text;
                if (task.completed) li.classList.add('completed');
                li.onclick = () => toggleTask(index);
                taskList.appendChild(li);
            });
            localStorage.setItem('focusTasks', JSON.stringify(tasks));
        }

        function addTask() {
            const text = taskInput.value.trim();
            if (text) {
                tasks.push({ text, completed: false });
                taskInput.value = '';
                renderTasks();
            }
        }

        function toggleTask(index) {
            tasks[index].completed = !tasks[index].completed;
            renderTasks();
        }

        function clearTasks() {
            if(confirm("Clear all tasks?")) {
                tasks = [];
                renderTasks();
            }
        }

        // Allow 'Enter' key for adding tasks
        taskInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') addTask();
        });

        // Initialize
        updateDisplay();
        renderTasks();
    </script>
</body>
